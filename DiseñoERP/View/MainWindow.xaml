                            </Button>
                        </Grid>


                        <DataGrid x:Name="dgv_invoices" Margin="8" Grid.Column="0" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True" SelectionMode="Single" SelectionChanged="fillSlaveOrders"  Background="#FFD3E3EF" MouseRightButtonDown="dgv_invoices_MouseRightButtonDown">
                            <DataGrid.RowStyle>
                                <Style TargetType="{x:Type DataGridRow}">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding accounted}" Value="1" >
                                            <Setter Property="Background" Value="Green" />
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding accounted}" Value="0" >
                                            <Setter Property="Background" Value="#FFD3E3EF" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </DataGrid.RowStyle>
                            <DataGrid.Columns>
                                <DataGridTextColumn Binding="{Binding idInvoice}" Header="Nº Invoice"/>
                                <DataGridTextColumn Binding="{Binding date}" Header="Fecha"/>
                                <DataGridTextColumn Binding="{Binding accounted}" Visibility="Hidden"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>

                    <Grid Grid.Row="1" Grid.Column="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="7*"/>
                        </Grid.ColumnDefinitions>

                        <Grid Grid.Column="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Button x:Name="btnAddInvoice" Content="New" Grid.Column="0" Margin="3,10,3,0" FontSize="12" VerticalAlignment="Center" Click="btnNewInvoice"/>
                            <Button x:Name="btnDeleteInvoices" Content="Delete" Grid.Column="1" Margin="3,10,3,0" FontSize="12" VerticalAlignment="Center" Click="btnDeleteInvoice"/>
                        </Grid>

                        <Button Grid.Column="1" Width="35" Height="35" HorizontalAlignment="Right" VerticalAlignment="Center" VerticalContentAlignment="Center" Margin="10"
                                     Style="{StaticResource MaterialDesignFloatingActionButton}" Cursor="Hand" Click="updateListInvoices">
                            <Image Source="/View/iconRefresh.png" Margin="6"/>
                        </Button>

                    </Grid>
                </Grid>
            </TabItem>

        </TabControl>

    </Grid>
</Window>
